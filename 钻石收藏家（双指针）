#include<bits/stdc++.h>
using namespace std;
const int N = 1e3+5;
int a[N];

int cmp(int a,int b)
{
	return a<b;
}
int main(void)
{
	int n,k;
	cin>>n>>k;
	for(int p=1;p<=n;p++)
		cin>>a[p];

	sort(a+1,a+1+n,cmp);
	//for(int p=1;p<=n;p++)	cout<<a[p]<<" ";
	int	i,j,ans=0;
	for(i=1;i<=n;i++)
	{
		j=i+1;
		while(a[j]-a[i]<=k&&j<=n)	j++;
		ans=max(ans,j-i);
	}
	cout<<ans;
	return 0;
} 
